{
    "name":         "geoffroy-aubry/logger",
    "description":  "PSR-3 logger for adding colors and indentation on PHP CLI output.",
    "keywords":     ["logger", "color logging", "bash color logging", "indent logging", "PSR-3"],
    "type":         "library",
    "license":      "LGPL-3.0+",
    "authors":      [
        {
            "name":     "Geoffroy Aubry",
            "email":    "geoffroy.aubry@free.fr"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "psr/log": "1.0.0",
        "geoffroy-aubry/helpers": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit":           ">=3.7",
        "phpmd/phpmd":               "1.4.*",
        "squizlabs/php_codesniffer": "1.4.*",
        "satooshi/php-coveralls":    "dev-master",
        "apigen/apigen":             "2.8.0"
    },
    "autoload": {
        "psr-0": {"GAubry\\Logger": "src/"}
    }
}
